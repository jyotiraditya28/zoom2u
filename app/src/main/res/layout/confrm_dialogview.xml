<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/white_background"
    >

    <TextView
        android:id="@+id/dialogLogoutTitleText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="Information !"
        android:textColor="@color/text_color1"
        android:textSize="18sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/dialogDoneBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/dialogLogoutMessageText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/remove_icon" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/dialogLogoutTitleText"
        android:layout_margin="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#FF476A" />
    <TextView
        android:id="@+id/dialogLogoutMessageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogLogoutTitleText"
        android:layout_margin="5dp"
        android:lineSpacingExtra="3dp"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingRight="15dp"
        android:paddingBottom="25dp"
        android:text="Please enter field first"
        android:textColor="@color/text_color1"
        android:textSize="15dp" />


   <!-- <View
        android:id="@+id/line"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/dialogLogoutMessageText"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#FF476A" />
-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/dialogLogoutMessageText"
        android:orientation="horizontal"
        android:background="@color/white"
        android:weightSum="1"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        >

        <TextView
            style="@style/style_15_bold"
            android:layout_height="50dp"
            android:layout_width="80dp"
            android:id="@+id/cancel"
            android:layout_weight=".5"
            android:textSize="16sp"
            android:gravity="center"
            android:text="Cancel"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/gray_background"
            android:textColor="@color/white"
            />


      <!--  <View
            android:id="@+id/line2"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#FF476A" />
-->


        <TextView
            android:layout_height="50dp"
            android:layout_width="80dp"
            style="@style/style_15_bold"
            android:id="@+id/ok"
            android:text="Ok"
            android:layout_marginStart="15dp"
            android:background="@drawable/chip_background"
            android:textSize="16sp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:layout_weight=".5"
            android:layout_marginTop="1dp"
            android:textColor="@color/white"
            />

    </LinearLayout>
</RelativeLayout>