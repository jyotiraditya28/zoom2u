<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:paddingBottom="10dp"
    android:background="@drawable/white_background"
    >

    <TextView
        android:id="@+id/dialogMessageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="30dp"
        android:lineSpacingExtra="3dp"
        android:paddingBottom="25dp"
        android:layout_below="@+id/titleDialog"
        android:text="Please enter field first"
        android:gravity="center|left"
        android:textColor="@color/mainloginbg"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/titleDialog"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="bottom|center|left"
        android:paddingLeft="15dp"
        android:text="Information !"
        android:textSize="18dp"
        android:textColor="@color/mainloginbg"
        android:textStyle="bold" />

    <View android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/titleDialog"
        android:layout_marginTop="7dp"
        android:background="#FF476A"
        android:layout_marginRight="15dp"/>

    <ImageView
        android:id="@+id/dialogDoneBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/dialogMessageText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/remove_icon" />

    <Button

        android:layout_height="wrap_content"
        android:layout_width="80dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Ok"
        android:id="@+id/okBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/dialogMessageText"
        android:textColor="@drawable/textcolorselector"
        android:background="@drawable/roundedskybluebg"/>
</RelativeLayout>

