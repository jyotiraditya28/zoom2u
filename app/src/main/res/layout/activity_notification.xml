<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data/>


    <RelativeLayout
        android:id="@+id/rateMeNotificationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rateTitleTxt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/gun_metal"
            android:text="@string/rate_your_delivery"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/courierNameHeader"
            style="@style/style_15_bold"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/courierPic"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="Donald D."
            android:textColor="#000000"
            android:textSize="17sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/courierPic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/rateTitleTxt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/notifiPickAddessHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courierNameHeader"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/pickup_address"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notificPickAddressValue"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/notifiPickAddessHeader"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="Pickup suburb"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/notifiDeliverAddessHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/notifiPickAddessHeader"
            android:layout_below="@+id/notificPickAddressValue"
            android:layout_marginTop="7dp"
            android:text="@string/deliver_address"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notificDropAddressValue"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/notifiDeliverAddessHeader"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="Delivery suburb"
            android:textColor="#000000"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/notificDropAddressValue"
            android:layout_marginTop="20dp"
            android:background="#ededed">

            <ImageView
                android:id="@+id/thumabsUpBtn"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_alignBottom="@+id/thumabsDownBtn"
                android:layout_alignParentStart="true"
                android:layout_marginStart="60dp"
                android:src="@drawable/thumbsup" />

            <TextView
                android:id="@+id/notifiWorkStatusTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/how_did_we_do_today"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/thumabsDownBtn"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_below="@+id/notifiWorkStatusTxt"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/thumbsdown" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/closeNotificatinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:src="@drawable/closemark" />

        <ProgressBar
            android:id="@+id/progressToLoadImg"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/courierPic"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp" />

        <RelativeLayout
            android:id="@+id/rateMeNotificationViewSub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#29000000" />

    </RelativeLayout>
</layout>